<% layout('/layouts/boilerplate') -%>

<div class="row mt-5 ">
    <div class="col-md-8 offset-md-2 offset-lg-3 col-lg-6">
        <h3 class="mb-3"><span class="fs-1 text-primary text-opacity-75">Login</span> your account.</h3>
        <form action="/user/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">User Name</label>
                <input name="username" type="text" class="form-control" id="username" required>
                <div class="valid-feedback">looks good!</div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" type="password" class="form-control" id="password" required>
                <div class="valid-feedback">looks good!</div>
            </div>
            
            <button class="btn btn-primary rounded-pill px-3">LogIn</button>
            <a class="offset-lg-8" href="/user/forgotPassword">Forgot Password.</a>
        </form>
    </div>
</div>