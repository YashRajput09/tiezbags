<% layout('/layouts/boilerplate') -%>

<!-- menu-bar -->
<div class="container d-flex px-0 py-5 gap-3">
  <div class="menu-bar position-sticky d-none d-lg-block">
    <div>
      <div class="menu-middle-section row gap-3">
        <a href="" class="text-secondary text-decoration-none"
          >All Products</a
        >
        <a href="/products/newProduct" class="text-secondary text-decoration-none"><b>Create New Product</b></a>
      </div>
    </div>  

    <!-- <div class="filter-by">
      <h5>Filter by:</h5>
      <p>Availability</p>
      <p class="text-secondary">Discount</p>
    </div>
  </div> -->
  </div>

  <!-- create new product -->
  <div class="row new-product border-secondary">
    <div class="border-bottom border-secondary border-opacity-50 py-2 text-center text-lg-start">
      <h2>Edit Product Details</h2>
    </div>
    <form method="POST" action="/products/<%= productDetails._id%>?_method=PUT" enctype="multipart/form-data" class="col-md-10 col-lg-11 offset-md-1 offset-lg-0">
      <div class="product-details px-2 py-4">
        <h3>Product Details</h3>
        <!-- <div class="d-flex gap-4 py-4">
            <h5>product Image</h5>
            <button class="btn btn-primary btn-sm rounded-pill px-3 py-2">
              Select File
              </button>
              </div> -->
        <div class="col col-lg-10">
            <div class="mb-3">
              <label for="image" class="form-label">Upload Image</label>
              <input
                type="file"
                value="<%= productDetails.image.url%>"
                name="product[image]"
                class="form-control bg-transparent border border-secondary"
                
              />
            </div>  

          <div class="mb-3">
            <input
              type="text"
              name="product[title]"
              value="<%= productDetails.title%>"
              class="form-control bg-transparent border border-secondary"
              placeholder="Product Title"
              required
            />
          </div>
          <div class="d-flex gap-3 mb-3">
            <input
              type="number"
              name="product[price]"
              value="<%= productDetails.price%>"
              class="form-control bg-transparent border border-secondary"
              placeholder="Product Price"
              required
            />
            <input
              type="text"
              name="product[discount]"
              value="<%= productDetails.discount%>"
              class="form-control bg-transparent border border-secondary"
              placeholder="Discount Price"
              required
            />
          </div>

        <div class="col">
          <div class="product-details py-4">
            <h3>Panel Details</h3>
          </div>
          <div class="mb-3">
            <input
              type="text"
              name="product[bgcolor]"
              value="<%= productDetails.bgcolor%>"
              class="form-control bg-transparent border border-secondary"
              placeholder="Background color"
              required
            />
          </div>
          <div class="d-flex gap-3 mb-3">
            <input
              type="text"
              name="product[panelcolor]"
              value="<%= productDetails.panelcolor%>"
              class="form-control bg-transparent border border-secondary"
              placeholder="Panel color"
              required
            />
            <input
              type="text"
              name="product[textcolor]"
              value="<%= productDetails.textcolor%>"
              class="form-control bg-transparent border border-secondary"
              placeholder="Text color"
              required
            />
          </div>

          <button class="btn btn-dark add-btn mb-5">Add Details</button>
        </div>
      </div>

      </div>
    </form>
  </div>
</div>
