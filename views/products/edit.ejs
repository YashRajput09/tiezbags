<!-- menu-bar -->
<div class="d-flex px-5 py-5 gap-3">
  <div class="menu-bar position-sticky">
    <div>
      <div class="menu-middle-section row gap-3">
        <a href="" class="text-secondary text-decoration-none"
          >All Products</a
