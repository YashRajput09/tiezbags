    <!-- <div class="filter-by">
      <h5>Filter by:</h5>
      <p>Availability</p>
      <p class="text-secondary">Discount</p>
    </div>
  </div> -->
  </div>

  <!-- create new product -->
  <div class="row new-product border-secondary">
    <div class="border-bottom border-secondary border-opacity-50 py-2">
      <h2>Create New Product</h2>
    </div>
    <form method="POST" action="/products/<%= productDetails._id%>?_method=PUT">
      <div class="product-details px-4 py-4">
        <h3>Product Details</h3>
        <!-- <div class="d-flex gap-4 py-4">
            <h5>product Image</h5>
            <button class="btn btn-primary btn-sm rounded-pill px-3 py-2">
              Select File
              </button>
              </div> -->
        <div class="col col-lg-8">
            <div class="mb-3">
              <label for="image" class="form-label">Upload Image</label>
              <input
                type="text"
                value="<%= productDetails.image%>"
                name="product[image]"
                class="form-control bg-transparent border border-secondary"
                required
              />
            </div>  

          <div class="mb-3">
            <input
              type="text"
              name="product[title]"
              value="<%= productDetails.title%>"
              class="form-control bg-transparent border border-secondary"
              placeholder="Product Title"
              required
            />
          </div>
          <div class="d-flex gap-3 mb-3">
            <input
              type="number"
              name="product[price]"
              value="<%= productDetails.price%>"
              class="form-control bg-transparent border border-secondary"
              placeholder="Product Price"
              required
            />
            <input
              type="text"
              name="product[discount]"
              value="<%= productDetails.discount%>"
              class="form-control bg-transparent border border-secondary"
              placeholder="Discount Price"
              required
            />
          </div>

        <div class="col">
          <div class="product-details py-4">
            <h3>Panel Details</h3>
          </div>
          <div class="mb-3">
            <input
              type="text"
              name="product[bgcolor]"
              value="<%= productDetails.bgcolor%>"
              class="form-control bg-transparent border border-secondary"
              placeholder="Background color"
              required
            />
          </div>
          <div class="d-flex gap-3 mb-3">
            <input
              type="text"
              name="product[panelcolor]"
              value="<%= productDetails.panelcolor%>"
              class="form-control bg-transparent border border-secondary"
              placeholder="Panel color"
              required
            />
            <input
              type="text"
              name="product[textcolor]"
              value="<%= productDetails.textcolor%>"
              class="form-control bg-transparent border border-secondary"
              placeholder="Text color"
              required
            />
          </div>

          <button class="btn btn-dark add-btn mb-5">Add Details</button>
        </div>
      </div>

      </div>
    </form>
  </div>
</div>
